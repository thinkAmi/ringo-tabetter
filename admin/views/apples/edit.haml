.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:apples, :index)
      %li=link_to pat(:new), url(:apples, :new)
      %li.active=link_to pat(:edit), url(:apples, :edit, :id => @apple.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:apple)
    .inner
      -form_for :apple, url(:apples, :update, :id => @apple.id), :method => :put, :class => :form do |f|
        =partial "apples/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
