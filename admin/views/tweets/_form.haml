- error = @tweet.errors.include?(:last_searched_id)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :last_searched_id, :class => 'control-label'
  .controls
    =f.text_field :last_searched_id, :class => 'input-xlarge input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:last_searched_id, :class => 'text-error') : pat(:example)

.form-actions
  =f.submit pat(:save), :class => 'btn btn-primary'
  &nbsp;
  =f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue'
  &nbsp;
  =link_to pat(:cancel), url(:tweets, :index), :class => 'btn'
