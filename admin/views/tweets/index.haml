.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:tweets, :index)
      %li=link_to pat(:new), url(:tweets, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:tweets)
    .inner
      %table.table
        %tr
          %th.first=mat(:tweet, :id)
          %th=mat(:tweet, :last_searched_id)
          %th=mat(:tweet, :created_at)
          %th=mat(:tweet, :updated_at)
          %th.last="&nbsp;"
        -@tweets.each do |tweet|
          %tr
            %td.first=tweet.id
            %td=tweet.last_searched_id
            %td=tweet.created_at
            %td=tweet.updated_at
            %td.last
              =button_to pat(:edit), url(:tweets, :edit, :id => tweet.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:tweets, :destroy, :id => tweet.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
